<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3_faded"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/appVersion"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/translucent_white"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <!-- Steam Boiler Options -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <!-- Header Row -->

                <TableRow android:background="@color/WTP_translucent_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/WTP_translucent_blue"
                        android:orientation="horizontal"
                        android:padding="8dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_boiler"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_boiler" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/boilerLabel"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/btnBoilerSolids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orng_stroked"
                        android:orientation="horizontal"
                        android:minHeight="48dip"
                        android:padding="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_solid"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_solid" />

                        <TextView
                            style="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/solidLabel"
                            android:textColor="@color/WTP_blue" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/btnBoilerLiquids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orng_stroked"
                        android:orientation="horizontal"
                        android:minHeight="48dip"
                        android:padding="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_liquid"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_liquid" />

                        <TextView
                            style="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                             android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/liquidLabel"
                            android:textColor="@color/WTP_blue" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <!-- Cooling Water Options -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <!-- Header Row -->

                <TableRow>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/WTP_translucent_blue"
                        android:orientation="horizontal"
                        android:padding="8dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_boiler"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_cooling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/coolingLabel"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/btnCoolingSolids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orng_stroked"
                        android:orientation="horizontal"
                        android:minHeight="48dip"
                        android:padding="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_solid"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_solid" />

                        <TextView
                            style="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_gravity="center_vertical"
                            android:text="@string/solidLabel"
                            android:textColor="@color/WTP_blue" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/btnCoolingLiquids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orng_stroked"
                        android:orientation="horizontal"
                        android:minHeight="48dip"
                        android:padding="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="icon_liquid"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_liquid" />

                        <TextView
                            style="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/liquidLabel"
                            android:textColor="@color/WTP_blue" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Row -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1.0" >

        <TableRow android:layout_height="12dip" >

            <Button
                android:id="@+id/btnAbout"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_weight=".2"
                android:background="@color/WTP_translucent_orange"
                android:padding="4dip"
                android:text="@string/aboutUsLabel"
                android:textColor="@color/WTP_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="@string/space"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btnContact"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_weight=".2"
                android:background="@color/WTP_translucent_orange"
                android:padding="4dip"
                android:text="@string/contactUsLabel"
                android:textColor="@color/WTP_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="@string/space"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btnHelp"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_weight=".2"
                android:background="@color/WTP_translucent_orange"
                android:padding="4dip"
                android:text="@string/helpLabel"
                android:textColor="@color/WTP_white" />
        </TableRow>
    </TableLayout>

</LinearLayout>