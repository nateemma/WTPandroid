<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3_faded"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnBoiler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignLeft="@+id/btnCooling"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnCooling"
        android:layout_marginTop="41dp"
        android:layout_centerHorizontal="true"
        android:background="@color/WTP_orange"
        android:textColor="@color/WTP_blue"
        style="?android:attr/textAppearanceLarge"
        android:text="@string/boilerWaterButtonText" />

    <Button
        android:id="@+id/btnCooling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/btnBoiler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/WTP_orange"
        android:textColor="@color/WTP_blue"
        style="?android:attr/textAppearanceLarge"
        android:text="@string/coolingWaterButtonText" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:background="@color/WTP_translucent_orange"
        android:textColor="@color/WTP_white"
        style="?android:attr/textAppearanceSmall"
        android:text="@string/aboutUsLabel" />


    <Button
        android:id="@+id/btnContact"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_centerHorizontal="true"
         android:layout_alignBaseline="@+id/btnAbout"
         android:background="@color/WTP_translucent_orange"
        android:text="@string/contactUsLabel"
        style="?android:attr/textAppearanceSmall"
        android:textColor="@color/WTP_white" />

    <Button
        android:id="@+id/btnHelp"
          style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignBaseline="@+id/btnContact"
        android:layout_alignBottom="@+id/btnContact"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:background="@color/WTP_translucent_orange"
        android:text="@string/helpLabel"
        android:textColor="@color/WTP_white" />
    
</RelativeLayout>
